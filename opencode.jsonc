{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "external_directory": {
      "~/Code/opencode/**": "allow",
    },
  },
  "mcp": {
    "shadcn": {
      "type": "local",
      "command": ["npx", "-y", "shadcn@latest", "mcp"],
      "enabled": true,
    },
    "tanstack": {
      "type": "local",
      "command": ["npx", "@tanstack/cli", "mcp"],
      "enabled": true,
    },
  },
}
